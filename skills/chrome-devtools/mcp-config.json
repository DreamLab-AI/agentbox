{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "env": {
        "CHROME_PATH": "/usr/bin/chromium",
        "DISPLAY": ":1",
        "CHROME_FLAGS": "--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage"
      },
      "type": "stdio"
    }
  },
  "installCommands": [],
  "dependencies": {
    "system": ["chromium"],
    "npm": []
  },
  "features": [
    "Performance tracing",
    "Network analysis",
    "Console inspection",
    "DOM/CSS inspection",
    "JavaScript evaluation",
    "Screenshot capture",
    "Coverage analysis"
  ],
  "displayRequirements": {
    "display": ":1",
    "vncPort": 5901,
    "description": "Chrome DevTools debugging via VNC"
  }
}
