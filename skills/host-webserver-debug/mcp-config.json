{
  "mcpServers": {
    "host-webserver-debug": {
      "command": "node",
      "args": ["${SKILL_PATH}/mcp-server/server.js"],
      "env": {
        "DISPLAY": ":1",
        "HOST_IP": "auto",
        "HTTPS_PORT": "3001",
        "TARGET_PORT": "3001",
        "SCREENSHOT_DIR": "/tmp/screenshots"
      },
      "type": "stdio"
    }
  },
  "installCommands": [
    "cd ${SKILL_PATH} && npm install"
  ],
  "dependencies": {
    "system": ["chromium", "openssl"],
    "npm": ["playwright", "@modelcontextprotocol/sdk"]
  },
  "features": [
    "HTTPS to HTTP bridge proxy",
    "Screenshot capture via Playwright",
    "CORS debugging",
    "Host server health checking",
    "Auto-detect Docker gateway IP"
  ],
  "displayRequirements": {
    "display": ":1",
    "vncPort": 5901,
    "description": "Browser visible via VNC on port 5901"
  }
}
