{
  "mcpServers": {
    "playwright": {
      "command": "node",
      "args": ["${SKILL_PATH}/mcp-server/server.js"],
      "env": {
        "DISPLAY": ":1",
        "CHROMIUM_PATH": "/usr/bin/chromium",
        "PLAYWRIGHT_HEADLESS": "false",
        "SCREENSHOT_DIR": "/tmp/playwright-screenshots",
        "PLAYWRIGHT_TIMEOUT": "30000",
        "VIEWPORT_WIDTH": "1920",
        "VIEWPORT_HEIGHT": "1080"
      },
      "type": "stdio"
    }
  },
  "installCommands": [
    "cd ${SKILL_PATH}/mcp-server && npm install"
  ],
  "dependencies": {
    "system": ["chromium"],
    "npm": ["playwright", "@modelcontextprotocol/sdk"]
  },
  "displayRequirements": {
    "display": ":1",
    "vncPort": 5901,
    "description": "Browser visible via VNC on port 5901"
  }
}
